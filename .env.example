# Example environment variables file
# Copy this file to .env and fill in your actual tokens
TELEGRAM_BOT_TOKEN=your_telegram_token_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_google_credentials_json

# Bot Mode Configuration
# Set to 'true' for webhook mode (required for Cloud Run Service)
# Set to 'false' or omit for polling mode (default, suitable for local development)
USE_WEBHOOK=false

# Webhook Configuration (only needed if USE_WEBHOOK=true)
# The URL where Telegram will send webhook requests
# For Cloud Run, this is automatically set during deployment
WEBHOOK_URL=https://your-service-url.run.app

# Port for webhook server (default: 8080)
# This should match the Cloud Run service port
PORT=8080